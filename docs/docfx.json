{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "XPing365",
      "_appTitle": "XPing365",
      "_appLogoPath": "images/logo.svg",
      "_appFaviconPath": "images/favicon.ico",
      "_appFooter": "<span>Official website <a href=\"https://xping365.com\">xping365.com</a> | Made with <a href=\"https://dotnet.github.io/docfx\">docfx</a></span>",
      "_enableSearch": true,
      "pdf": false
    }
  }
}